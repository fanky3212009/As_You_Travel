<style media="screen">



html body {
  height: 100%;
}

.homepage-stat .activity-tags {
  position: relative;
  left: 3em;
  top: 2em;
  .add-new-tag {
    padding: 13px 25px;
  }

}
.diary-stat.homepage-stat.location-date {
