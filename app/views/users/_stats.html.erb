<% @user ||= current_user %>
<div class="stats">
  <%= link_to followings_user_path(@user) do %>
    <strong id="following" class="stat">
      <%= @user.followings.count %>
    </strong>
  <% end %>
    following
  <%= link_to followers_user_path(@user) do %>
    <strong id="followers" class="stat">
      <%= @user.followers.count %>
    </strong>
  <% end %>
  followers
</div>
