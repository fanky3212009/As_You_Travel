  }

}
.diary-stat.homepage-stat.location-date {
    display: inline-block;
    position: relative;
    top: 16em;
    left: -0.5em;
}
/** ---------------------------------------
* Responsive
----------------------------------------*/
@media only screen and (max-width: 825px) {
