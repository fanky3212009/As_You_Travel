/** ---------------------------------------
* Responsive
----------------------------------------*/
@media only screen and (max-width: 825px) {
.container {
  width: 500px;
}

.slider-wrapper {
  height: 260px;
}
}

@media only screen and (max-width: 535px) {
.container {
  padding: 5px;
  width: 100%;
  margin: 40px 0 0 0;
}

.slider-wrapper {
  height: 200px;
}

.slider-wrapper .caption {
  display: none;
}

}

@media only screen and (max-width: 410px) {
.slider-wrapper {
  height: 160px;
}
}
